<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vishnu.myapplications.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#FFFFFF"
    android:id="@+id/bgcolor">

    <RelativeLayout tools:context="com.example.vishnu.myap.MainActivity"
        tools:showIn="@layout/activity_main"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:backgroundTint="#ed3333"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="31dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAP THIS!"
            android:id="@+id/calcBtn"
            android:background="#fc0808"
            android:textColor="#FFFFFF"
            android:focusable="true"
            android:layout_marginRight="112dp"
            android:layout_marginEnd="112dp"
            android:layout_above="@+id/total"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="50dp"
            android:id="@+id/total"
            android:layout_marginRight="165dp"
            android:layout_marginEnd="165dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/calcBtn"
            android:layout_toStartOf="@+id/calcBtn"
            android:saveEnabled="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:id="@+id/reset"
            android:layout_alignTop="@+id/total"
            android:layout_toRightOf="@+id/total"
            android:layout_toEndOf="@+id/total"
            android:layout_marginTop="38dp" />

    </RelativeLayout>
</RelativeLayout>